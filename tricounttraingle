#include <iostream>
using namespace std;

int main() {
   
    int t;
    cin>>t;
    while(t>0)
    {
        long long int x;
        cin>>x;
        if((x%2)==0)
        {
           x=x/2;
           cout<<x*(x+1)*((4*x)+1)/2<<endl;
         
        }
        else
        {
          x=(x-1)/2;
          cout<<(x+1)*(4*x*x+(7*x)+2)/2<<endl;
        }
         t--;
    }
    return 0;
}

